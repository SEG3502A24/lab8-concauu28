
type Employee {
  id: ID!
  name: String!
  dateOfBirth: String
  city: String
  salary: Float
  gender: String
  email: String
}

type Query {
  employees: [Employee]
  employeeById(id: ID!): Employee
}

input CreateEmployeeInput {
  name: String!
  dateOfBirth: String
  city: String
  salary: Float
  gender: String
  email: String
}

type Mutation {
  createEmployee(input: CreateEmployeeInput!): Employee!
  deleteEmployee(id: ID!): Boolean
  updateEmployee(id: ID!, input: CreateEmployeeInput!): Employee!
}
